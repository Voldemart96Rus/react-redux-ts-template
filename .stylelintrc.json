{
    "extends": "stylelint-config-recommended",
    "rules": {
      "at-rule-no-unknown": [ true, {
        "ignoreAtRules": [
          "extends",
          "ignores"
        ]
      }],
      "indentation": 4,
      "color-hex-length": "long",
      "value-list-comma-newline-after": "always-multi-line",
      "comment-empty-line-before": ["always", {
        "except": ["first-nested"],
        "ignore": ["after-comment", "stylelint-commands"]
    }]
    }
  }
  